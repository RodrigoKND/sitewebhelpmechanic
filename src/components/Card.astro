---
interface Props {
	title: string;
	hrefLink: string;
	hrefImage: string;
}

const { hrefLink, hrefImage, title } = Astro.props;
---
<div class="mx-auto mb-6 max-w-full">
	<a class="cursor-pointer" href={hrefLink}>
		<img
			class="object-cover opacity-80 hover:border-2 border-sky-500"
			src={hrefImage}
			alt="titulo"
			style="max-width: 500px;"
		/>
		<h2 class="mt-5 ml-4 mb-4">{title}</h2>
	</a>
</div>

